<html>
<head></head>
<body>
  <h1> Add New Comment</h1>
  <form action="/blogs/{{blogid}}" method="POST">
    <input type="text" name="title" placeholder="Title"/>
    <input type="text" name="comment" placeholder="Speak Up!"/>
    <input type="hidden"name="blogid" value="{{blogid}}"/>
    <input type="submit" value="Post"/>
  </form>


<h1>Comments</h1>

  {{#reviews}}

    <h3>{{title}}</h3>
    <p>{{comment}}</p>


  {{/reviews}}


</body>
</html>
